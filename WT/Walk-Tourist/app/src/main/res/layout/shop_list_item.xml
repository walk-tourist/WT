<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- item_image -->
        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/item_hummer"/>

        <!-- item_name -->
        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/list_item_image"
            android:textSize="30dp"
            android:hint="アイテム名"/>

        <!-- item_price -->
        <TextView
            android:id="@+id/list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_name"
            android:layout_alignBaseline="@+id/list_item_name"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:textColor="#FF0000"
            android:hint="アイテムの価格"/>

        <!-- item_description -->
        <TextView
            android:id="@+id/list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/list_item_image"
            android:textSize="15dp"
            android:hint="アイテムの説明"/>

    </RelativeLayout>

</LinearLayout>